<h1>Posts Details<h1/>
<div>
  <div>
  <div>
    <p> Post <%=@post.id%> by <%=@post.author.name%></p>
    <p>Comments: <%=@post.CommentsCounter%> Likes:  <%=@post.LikesCounter%></p>
  </div>
  <div>
    <p><%=@post.text%></p>
  </div>
    </div>
    <% if  !@post.comments.empty?%>
    <div>
     <% @post.comments.each do |comment| %>
       <%= render 'shared/comment', comment:comment %>
       <% end %>
  </div>
    <%end%>
</div>